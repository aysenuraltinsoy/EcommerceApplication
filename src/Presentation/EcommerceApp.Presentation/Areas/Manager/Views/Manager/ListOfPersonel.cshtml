@model IEnumerable<EcommerceApp.Application.Models.VMs.ListOfPersonelVM>

@{
    ViewData["Title"] = "ListOfPersonel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ListOfPersonel</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
                Image
            </th>
            
            <th>
               Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Roles
            </th>
            <th>Functions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td> 
                <img src="@item.ImagePath" height="100" width="100">
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.Roles.ToString()
            </td>
            <td>
                    <a class="btn btn-success" asp-action="UpdatePersonel"  asp-controller="Manager" asp-route-id=@item.Id>Edit</a>
                    <a class="btn btn-danger" asp-action="DeletePersonel"  asp-controller="Manager" asp-route-id=@item.Id>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
